<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/textview_borde"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            >
        <TextView
            android:id="@+id/display_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="监听来自雷达的跌倒信息...!"
            android:textColor="#070707"
            android:textSize="20sp"
            android:layout_alignParentTop="true" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/info"
    android:orientation="vertical">

    <Button
        android:id="@+id/clear"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/info"
        android:text="清除"
        android:onClick="Onclick"
        android:textAlignment="center"
         />

    <TextView
        android:id="@+id/sn"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_below="@+id/info"
        android:text="雷达sn:"
        android:textAlignment="textStart"
        android:textColor="#070707"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/id"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_below="@+id/info"
        android:text="设备ID:"
        android:textAlignment="textStart"
        android:textColor="#070707"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/wifi_version"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_below="@+id/info"
        android:text="wifi软件版本号:"
        android:textAlignment="textStart"
        android:textColor="#070707"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/radar_version"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_below="@+id/info"
        android:text="雷达软件版本号:"
        android:textAlignment="textStart"
        android:textColor="#070707"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/radar_type"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_below="@+id/info"
        android:text="雷达类型:"
        android:textAlignment="textStart"
        android:textColor="#070707"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/radar_ip"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_below="@+id/info"
        android:text="雷达本地ip地址:"
        android:textAlignment="textStart"
        android:textColor="#070707"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/radar_mac"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_below="@+id/info"
        android:text="雷达mac地址:"
        android:textAlignment="textStart"
        android:textColor="#070707"
        android:textSize="20sp" />
</LinearLayout>

    <Button
        android:id="@+id/wake"
        android:layout_width="122dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="153dp"
        android:background="@drawable/button_color"
        android:text="唤醒"
        android:onClick="Onclick"
        android:textAlignment="center"
        android:textColor="#050505"
        android:textSize="20sp" />

    <Button
        android:id="@+id/set"
        android:background="@drawable/button_color"
        android:layout_width="122dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="70dp"
        android:text="设置"
        android:onClick="Onclick"
        android:textAlignment="center"
        android:textColor="#050505"
        android:textSize="20sp" />

    <Button
        android:id="@+id/get_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="1dp"
        android:layout_marginBottom="220dp"
        android:background="@drawable/button_color"
        android:text="获取软件信息"
        android:onClick="Onclick"
        android:textAlignment="center"
        android:textColor="#050505"
        android:textSize="20sp" />

    <Button
        android:id="@+id/sleep"
        android:layout_width="122dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="153dp"
        android:background="@drawable/button_color"
        android:text="休眠"
        android:onClick="Onclick"
        android:textAlignment="center"
        android:textColor="#050505"
        android:textSize="20sp" />

    <Button
        android:id="@+id/update"
        android:background="@drawable/button_color"
        android:layout_width="122dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="70dp"
        android:text="升级"
        android:onClick="Onclick"
        android:textAlignment="center"
        android:textColor="#050505"
        android:textSize="20sp" />


</RelativeLayout>