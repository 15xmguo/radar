<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="@drawable/layout_color"
        android:layout_width="match_parent"
        android:layout_height="110dp">
        <TextView
            android:id="@+id/text_delay"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            android:text="延迟参数："
            android:textColor="#070707"
            android:textSize="20sp"
            />
        <EditText
            android:id="@+id/edit_delay"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@+id/text_delay">
        </EditText>

        <Button
            android:id="@+id/delay_readback"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:background="@drawable/button_color"
            android:text="回读"
            android:onClick="Onclick"
            android:textAlignment="center"
            android:textColor="#050505"
            android:textSize="20sp" />
        <Button
            android:id="@+id/delay_set"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="120dp"
            android:background="@drawable/button_color"
            android:text="设置"
            android:onClick="Onclick"
            android:textAlignment="center"
            android:textColor="#050505"
            android:textSize="20sp" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/layout_color"
        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >
        <TextView
            android:id="@+id/left_boundary"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            android:text="左边界："
            android:textColor="#070707"
            android:textSize="20sp"
            />
        <EditText
            android:id="@+id/edit_left_boundary"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@+id/left_boundary">
        </EditText>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/right_boundary"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            android:text="右边界："
            android:textColor="#070707"
            android:textSize="20sp"
            />
        <EditText
            android:id="@+id/edit_right_boundary"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@+id/right_boundary">
        </EditText>

    </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/upper_boundary"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:text="右边界："
                android:textColor="#070707"
                android:textSize="20sp"
                />
            <EditText
                android:id="@+id/edit_upper_boundary"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_toRightOf="@+id/upper_boundary">
            </EditText>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/lower_boundary"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:text="右边界："
                android:textColor="#070707"
                android:textSize="20sp"
                />
            <EditText
                android:id="@+id/edit_lower_boundary"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_toRightOf="@+id/lower_boundary">
            </EditText>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            >
        <Button
            android:id="@+id/boundary_readback"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:background="@drawable/button_color"
            android:text="回读"
            android:onClick="Onclick"
            android:textAlignment="center"
            android:textColor="#050505"
            android:textSize="20sp" />
        <Button
            android:id="@+id/boundary_set"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="120dp"
            android:background="@drawable/button_color"
            android:text="设置"
            android:onClick="Onclick"
            android:textAlignment="center"
            android:textColor="#050505"
            android:textSize="20sp" />
        </RelativeLayout>
</LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@drawable/layout_color"

        >
        <TextView
            android:id="@+id/detection"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            android:text="微动检测阈值："
            android:textColor="#070707"
            android:textSize="20sp"
            />
        <EditText
            android:id="@+id/edit_detection"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@+id/detection">
        </EditText>
        <Button
            android:id="@+id/detection_readback"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:background="@drawable/button_color"
            android:text="回读"
            android:onClick="Onclick"
            android:textAlignment="center"
            android:textColor="#050505"
            android:textSize="20sp" />
        <Button
            android:id="@+id/detection_set"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="120dp"
            android:background="@drawable/button_color"
            android:text="设置"
            android:onClick="Onclick"
            android:textAlignment="center"
            android:textColor="#050505"
            android:textSize="20sp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">
        <Button
            android:id="@+id/return_MainActivity"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_color"
            android:text="返回"
            android:onClick="Onclick"
            android:textAlignment="center"
            android:textColor="#050505"
            android:textSize="20sp" />
    </RelativeLayout>
</LinearLayout>